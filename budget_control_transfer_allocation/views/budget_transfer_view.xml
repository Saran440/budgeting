<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_budget_transfer_form" model="ir.ui.view">
        <field name="name">view.budget.transfer.form</field>
        <field name="model">budget.transfer</field>
        <field
            name="inherit_id"
            ref="budget_control_transfer.view_budget_transfer_form"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='transfer_item_ids']/tree/field[@name='target_budget_control_id']"
                position="attributes"
            >
                <attribute name="string">My Budget</attribute>
            </xpath>
            <xpath
                expr="//field[@name='transfer_item_ids']/tree/field[@name='target_item_id']"
                position="attributes"
            >
                <attribute name="required">False</attribute>
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath
                expr="//field[@name='transfer_item_ids']/tree/field[@name='target_amount']"
                position="attributes"
            >
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath
                expr="//field[@name='transfer_item_ids']/tree/field[@name='source_item_id']"
                position="attributes"
            >
                <attribute name="required">False</attribute>
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath
                expr="//field[@name='transfer_item_ids']/tree/field[@name='source_amount']"
                position="attributes"
            >
                <attribute name="invisible">True</attribute>
            </xpath>
        </field>
    </record>

</odoo>
