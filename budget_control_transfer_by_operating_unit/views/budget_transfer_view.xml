<odoo>

    <record id="view_budget_transfer_form" model="ir.ui.view">
        <field name="name">view.budget.transfer.form</field>
        <field name="model">budget.transfer</field>
        <field
            name="inherit_id"
            ref="budget_control_transfer.view_budget_transfer_form"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='transfer_item_ids']/tree/field[@name='target_amount']"
                position="attributes"
            >
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath
                expr="//field[@name='transfer_item_ids']/tree/field[@name='target_amount_available']"
                position="attributes"
            >
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath
                expr="//field[@name='transfer_item_ids']/tree/field[@name='target_budget_control_id']"
                position="before"
            >
                <field name="target_operating_unit_id" opetions="{'no_create': True}" />
            </xpath>
            <xpath expr="//field[@name='transfer_item_ids']/tree" position="inside">
                <field name="source_department_id" invisible="1" />
            </xpath>
        </field>
    </record>

</odoo>
