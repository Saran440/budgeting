<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="budget_fund_constraint_view_tree" model="ir.ui.view">
        <field name="name">budget.fund.constraint.view.tree</field>
        <field name="model">fund.constraint</field>
        <field name="arch" type="xml">
            <tree string="Budget Fund Constraint">
                <field name="name" />
                <field name="analytic_account_id" />
                <field name="fund_id" />
                <field name="active" widget="boolean_toggle" optional="show" />
            </tree>
        </field>
    </record>

    <record id="budget_fund_constraint_line_view_tree" model="ir.ui.view">
        <field name="name">budget.fund.constraint.line.view.tree</field>
        <field name="model">fund.constraint.line</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="account_ids" widget="many2many_tags" />
                <field name="allocation_amount" />
            </tree>
        </field>
    </record>

    <record id="budget_fund_constraint_view_filter" model="ir.ui.view">
        <field name="name">budget.fund.constraint.view.filter</field>
        <field name="model">fund.constraint</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="[('name', 'ilike', self)]" />
                <field name="analytic_account_id" />
                <separator />
                <filter
                    name="inactive"
                    string="Archived"
                    domain="[('active', '=', False)]"
                />
                <filter
                    name="active"
                    string="UnArchived"
                    domain="[('active', '=', True)]"
                />
                <group expand="0" string="Group By">
                    <filter
                        name="analytic"
                        string="Analytic Account"
                        context="{'group_by': 'analytic_account_id'}"
                    />
                    <filter
                        name="fund"
                        string="Fund"
                        context="{'group_by': 'fund_id'}"
                    />
                </group>
           </search>
        </field>
    </record>

    <record id="budget_fund_constraint_view_form" model="ir.ui.view">
        <field name="name">budget.fund.constraint.view.form</field>
        <field name="model">fund.constraint</field>
        <field name="arch" type="xml">
            <form string="Budget Fund Constraint">
                <header />
                <sheet>
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group name="fund_constraint_left">
                            <field name="analytic_account_id" />
                            <field name="fund_id" />
                        </group>
                        <group name="fund_constraint_right">
                            <field name="fund_amount" />
                            <field name="active" />
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                            />
                            <field
                                name="currency_id"
                                groups="base.group_multi_currency"
                            />
                        </group>
                    </group>
                    <notebook>
                        <page name="constraint" string="Constraint">
                            <field name="fund_constraint_line" />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="budget_fund_constraint_action" model="ir.actions.act_window">
        <field name="name">Budget Fund Constraint</field>
        <field name="view_id" ref="budget_fund_constraint_view_tree" />
        <field name="res_model">fund.constraint</field>
        <field name="context">{'active_test': False}</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="budget_fund_constraint_menu"
        parent="budget_source_fund.budget_source_of_fund_menu"
        name="Fund Constraint"
        action="budget_fund_constraint_action"
        sequence="70"
    />

</odoo>
