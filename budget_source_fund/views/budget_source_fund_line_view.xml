<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="budget_source_fund_line_filter" model="ir.ui.view">
        <field name="name">budget.source.fund.line.filter</field>
        <field name="model">budget.source.fund.line</field>
        <field name="arch" type="xml">
            <search string="Search Source of Fund line">
                <field name="fund_id" string="Fund" />
                <!-- <separator />
                <filter
                    string="Fund Group"
                    name="fund_group_id"
                    domain="[('fund_group_id', '!=', False)]"
                /> -->
                <separator />
                <filter
                    name="archived"
                    string="Archived"
                    domain="[('active', '=', False)]"
                />
                <group expand="0" string="Group By">
                    <filter
                        name="fund_id"
                        string="Fund"
                        context="{'group_by':'fund_id'}"
                    />
                    <filter
                        name="budget_control_id"
                        string="Budget Control"
                        context="{'group_by':'budget_control_id'}"
                    />
                    <filter
                        name="budget_id"
                        string="Budget"
                        context="{'group_by':'budget_id'}"
                    />
                </group>
           </search>
        </field>
    </record>

    <record id="view_budget_source_fund_line_tree" model="ir.ui.view">
        <field name="name">budget.source.fund.line.tree</field>
        <field name="model">budget.source.fund.line</field>
        <field name="arch" type="xml">
            <tree delete="0" create="0">
                <field name="fund_id" />
                <field name="date_from" />
                <field name="date_to" />
                <field name="budget_control_id" />
                <field name="budget_id" />
                <field name="amount" sum="Total Amount" />
                <field name="spent" sum="Spent" />
                <field
                    name="state"
                    widget="badge"
                    decoration-info="state == 'draft'"
                    decoration-success="state == 'done'"
                />
                <field name="company_currency_id" invisible="1" />
            </tree>
        </field>
    </record>

    <!-- Menu source of funds all -->
    <record id="view_budget_source_fund_line_form" model="ir.ui.view">
        <field name="name">budget.source.fund.line.form</field>
        <field name="model">budget.source.fund.line</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="fund_id" />
                            <field name="budget_id" />
                            <field name="budget_control_id" />
                            <field name="amount" />
                            <field name="spent" />
                        </group>
                        <group>
                            <field name="date_from" />
                            <field name="date_to" />
                            <field name="active" invisible="1" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="budget_source_fund_line_action" model="ir.actions.act_window">
        <field name="name">Source of Funds All</field>
        <field name="res_model">budget.source.fund.line</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="budget_source_fund_all_menu"
        parent="budget_control.budget_menu"
        name="Source of Funds"
        sequence="15"
    />

    <menuitem
        id="budget_source_fund_line_menu"
        parent="budget_source_fund.budget_source_fund_all_menu"
        name="Source of Funds All"
        action="budget_source_fund_line_action"
        sequence="10"
    />

</odoo>
