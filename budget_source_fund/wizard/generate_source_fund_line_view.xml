<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_generate_source_fund_line" model="ir.ui.view">
        <field name="name">Generate Source of Fund lines</field>
        <field name="model">generate.source.fund.line</field>
        <field name="arch" type="xml">
            <form string="Generate Source of Fund lines">
                <group>
                    <field name="budget_control_ids" widget="many2many_tags" />
                </group>
                <footer>
                    <button
                        name="action_generate_line"
                        type="object"
                        string="Generate"
                        class="btn-primary"
                    />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_generate_source_fund_line" model="ir.actions.act_window">
        <field name="name">Generate Source of Fund Lines</field>
        <field name="res_model">generate.source.fund.line</field>
        <field name="view_mode">form</field>
        <field name="binding_model_id" ref="model_budget_source_fund" />
        <field name="binding_view_types">form</field>
        <field name="target">new</field>
    </record>

</odoo>
