<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_budget_source_fund_plan_tree" model="ir.ui.view">
        <field name="name">budget.source.fund.plan.tree</field>
        <field name="model">budget.source.fund.plan</field>
        <field
            name="inherit_id"
            ref="budget_source_fund.view_budget_source_fund_plan_tree"
        />
        <field name="arch" type="xml">
            <field name="state" position="before">
                <field name="revision_number" />
            </field>
        </field>
    </record>

    <record id="view_budget_source_fund_plan_form" model="ir.ui.view">
        <field name="name">budget.source.fund.plan.form</field>
        <field name="model">budget.source.fund.plan</field>
        <field
            name="inherit_id"
            ref="budget_source_fund.view_budget_source_fund_plan_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button
                    name="create_revision"
                    string="New Revision"
                    type="object"
                    states="cancel"
                    context="{'active_model': 'budget.source.fund.plan'}"
                />
            </xpath>
            <xpath expr="//group[@name='source_fund_plan_right']" position="inside">
                <field name="revision_number" />
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Revisions">
                    <field
                        name="old_revision_ids"
                        domain="['|', ('active', '=', False), ('active', '=', True)]"
                        context="{'active_test': False, 'form_view_ref': 'budget_source_fund.view_budget_source_fund_plan_form_without_header'}"
                        attrs="{'invisible': [('has_old_revisions', '=', False)]}"
                    >
                        <tree>
                            <field name="name" />
                            <field name="create_date" string="Superseeded on" />
                            <field name="create_uid" string="Superseeded by" />
                            <field name="state" invisible="1" />
                        </tree>
                    </field>
                    <group attrs="{'invisible': [('current_revision_id', '=', False)]}">
                        <field name="current_revision_id" />
                        <field name="has_old_revisions" invisible="1" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
