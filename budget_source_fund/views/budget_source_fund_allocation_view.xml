<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_budget_source_fund_allocation_filter" model="ir.ui.view">
        <field name="name">view.budget.source.fund.allocation.filter</field>
        <field name="model">budget.source.fund.allocation</field>
        <field name="arch" type="xml">
            <search string="Search Budget Source of Fund Allocation">
                <field
                    name="allocation_id"
                    string="Allocation"
                    filter_domain="[('allocation_id','ilike',self)]"
                />
                <field
                    name="analytic_account_id"
                    string="Analytic Account"
                    filter_domain="[('analytic_account_id','ilike',self)]"
                />
                <separator />
                <filter
                    name="active"
                    string="Archived"
                    domain="[('active', '=', False)]"
                />
                <group string="Group By" name="groupby">
                    <filter
                        name="groupby_allocation"
                        string="Allocation"
                        context="{'group_by': 'allocation_id'}"
                    />
                    <filter
                        name="groupby_budget_period"
                        string="Budget Period"
                        context="{'group_by': 'budget_period_id'}"
                    />
                </group>
           </search>
        </field>
    </record>

    <record id="view_budget_source_fund_allocation_tree" model="ir.ui.view">
        <field name="name">budget.source.fund.allocation.tree</field>
        <field name="model">budget.source.fund.allocation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="allocation_id" />
                <field name="date_from" />
                <field name="date_to" />
                <field name="analytic_account_id" />
                <field name="budget_period_id" optional="show" />
                <field name="budget_id" optional="hide" />
                <field name="budget_control_id" optional="show" />
                <field name="amount" sum="Total Amount" />
                <field name="spent" sum="Spent" />
                <field
                    name="state"
                    widget="badge"
                    decoration-info="state == 'draft'"
                    decoration-success="state == 'done'"
                />
                <field name="company_currency_id" invisible="1" />
            </tree>
        </field>
    </record>

    <record id="view_budget_source_fund_allocation_form" model="ir.ui.view">
        <field name="name">budget.source.fund.allocation.form</field>
        <field name="model">budget.source.fund.allocation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <group>
                        <group name="source_fund_allocation_left">
                            <field name="allocation_id" />
                            <field name="analytic_account_id" />
                            <field name="budget_id" />
                            <field name="budget_period_id" />
                            <field name="budget_control_id" />
                            <field name="amount" />
                            <field name="spent" />
                        </group>
                        <group name="source_fund_allocation_right">
                            <field name="date_from" />
                            <field name="date_to" />
                            <field name="active" invisible="1" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="budget_source_fund_allocation_action" model="ir.actions.act_window">
        <field name="name">Source of Fund Allocation</field>
        <field name="res_model">budget.source.fund.allocation</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="budget_source_fund_allocation_menu"
        parent="budget_source_fund.source_of_fund_menu"
        name="Source of Funds Allocation"
        action="budget_source_fund_allocation_action"
        sequence="100"
    />

</odoo>
